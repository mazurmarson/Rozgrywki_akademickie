@model cloudscribe.Pagination.Models.PagedResult<Sport>
@{
    ViewData["Title"] = "WybierzSport";
}

<h1>WybierzSport</h1>

<form asp-controller="Zawody" asp-action="WybierzSport" method="get">
    <p>
        Nazwa: <input type="text" name="SearchString">
        <input type="submit" value="Szukaj" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Sport
            </th>
            <th>
                Wybierz
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwa)
                </td>


                <td>

                    
                    <a asp-action="Dodaj2" asp-route-id="@item.Id" >Wybierz Sport</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<cs-pager cs-paging-pagenumber="(int)Model.PageNumber"
          cs-paging-totalitems="(int)Model.TotalItems"
          cs-paging-pagesize="Model.PageSize"
          cs-pagenumber-param="pagenumber"
          asp-controller="Zawody"
          asp-action="WybierzSport"
          cs-pager-li-current-class="page-item active"
          cs-pager-li-other-class="page-item"
          cs-pager-li-non-active-class="page-item disabled"
          cs-pager-link-current-class="page-link"
          cs-pager-link-other-class="page-link"></cs-pager>