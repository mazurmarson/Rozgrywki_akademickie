@model cloudscribe.Pagination.Models.PagedResult<Kierunek>


    <form asp-controller="Kierunek" asp-action="Index" method="get">
        <p>
            Nazwa: <input type="text" name="SearchString">
            <input type="submit" value="Szukaj" />
        </p>
    </form>
<table class="table" style="background-color:azure">
    <thead>
        <tr>
            <th>Nazwa Kierunku</th>
            <th>Rok</th>

            <th>
                <a asp-action="Dodaj" class="btn btn-danger btn-sm">Dodaj nowy</a>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nazwa)</td>
                <td>@Html.DisplayFor(modelItem => item.Rok)</td>
                <td>@Html.DisplayFor(modelItem => item.CzyBonus)</td>
                <td><a asp-action="Szczegoly" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Szczegóły</a></td>
                <td><a asp-action="Usun" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Usun</a></td>
                <td><a asp-action="Edytuj" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Edytuj</a></td>

                <td>
                    @*<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Szczegóły</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Usuń</a>*@
                </td>


            </tr>
        }
    </tbody>
</table>
<cs-pager cs-paging-pagenumber="(int)Model.PageNumber"
          cs-paging-totalitems="(int)Model.TotalItems"
          cs-paging-pagesize="Model.PageSize"
          cs-pagenumber-param="pagenumber"
          asp-controller="Kierunek"
          asp-action="Index"
          cs-pager-li-current-class="page-item active"
          cs-pager-li-other-class="page-item"
          cs-pager-li-non-active-class="page-item disabled"
          cs-pager-link-current-class="page-link"
          cs-pager-link-other-class="page-link"></cs-pager>