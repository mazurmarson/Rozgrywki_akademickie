@model Kierunek

<div>
    <div class="thumbnail">
        <div class="row">
            <div class="col-md-6">
                <h3>@Model.Nazwa - @Model.Rok</h3>

                <h2>Na pewno chcesz usunąć?</h2>

                <form asp-action="Usun">
                    <input type="submit" value="Usuń" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-success">Powrót</a>
                </form>

            </div>
        </div>
    </div>
</div>