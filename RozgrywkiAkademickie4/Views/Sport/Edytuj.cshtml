@model Sport


<div class="row">


    <form asp-action="Edytuj">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-md-4">
            <div class="form-group">
                <label  asp-for="Nazwa" class="col-md-4 control-label"></label>
                <input style="width: 150px;" asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Edytuj sport" class="btn btn-success" style="margin-top:30px" />
                <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
            </div>
        </div>
    </form>
</div>
